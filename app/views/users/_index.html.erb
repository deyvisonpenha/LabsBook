<div class="col-md-6" id="setupUser">
  <div class="panel panel-primary"> 
    <div class="panel-heading"> 
      <h3 class="panel-title">Setup User</h3> 
    </div> 
    <div class="panel-body"> 

      <% if notice %>
      <p id="notice"><%= notice %></p>
      <%end %>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Edit', edit_user_path(user.id), remote: true %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New User', new_user_path, remote: true %>

    </div><!-- end panel-body --> 
  </div>
</div>